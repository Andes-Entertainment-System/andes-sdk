  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "Andes SDK: Metadata Config",
  "description": "Schema for the Andes SDK metadata configuration file.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "big_thumbnail_path": {
      "type": "string",
      "required": true
    },
    "small_thumbnail_path": {
      "type": "string",
      "required": true
    }
  }
}
