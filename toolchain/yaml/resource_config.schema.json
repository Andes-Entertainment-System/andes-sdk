{
  "$id": "https://andes-entertainment-system.github.io/andes-sdk/toolchain/yaml/resource_config.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "Andes SDK: Resource Config",
  "description": "Schema for the Andes SDK resource configuration file.",
  "type": "object",
  "properties": {
    "audio": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "loop_start": { "type": "number" }
        },
        "required": [ "id", "path" ]
      }
    },
    "palettes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" }
        }
      },
      "required": [ "id", "path" ]
    },
    "rawdata": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" }
        },
        "required": [ "id", "path" ]
      }
    },
    "spritesets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "settings_path": { "type": "string" },
          "settings": {
            "$ref": "https://andes-entertainment-system.github.io/andes-sdk/toolchain/yaml/spriteset_settings.schema.json"
          }
        },
        "required": [ "id", "path" ]
      }
    },
    "tilesets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "keep_duplicates": { "type": "boolean" },
          "export_plane_arrangement": { "type": "boolean" },
          "plane_arrangement_offset": { "type": "number" },
          "plane_arrangement_priority": { "type": "boolean" }
        },
        "required": [ "id", "path" ]
      }
    },
    "tilemaps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "layer_prefix": { "type": "string" },
          "tileset_offset": { "type": "number" }
        },
        "required": [ "id", "path" ]
      }
    }
  }
}