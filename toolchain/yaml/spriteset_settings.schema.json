{
  "$id": "https://sneezingcactus.github.io/andes-sdk/toolchain/yaml/sprite_settings.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Andes SDK: Resource Config - Spriteset Settings",
  "description": "Schema for Andes SDK spriteset setting files.",
  "type": "object",
  "properties": {
    "split": {
      "type": "object",
      "properties": {
        "mode": { "type": "string", "enum": ["none", "grid", "manual"] },
        "grid_cols": { "type": "number" },
        "grid_rows": { "type": "number" },
        "manual_frames": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "width": { "type": "number" },
              "height": { "type": "number" }
            },
            "required": ["x", "y", "width", "height"]
          }
        }
      },
      "required": ["mode"]
    }
  }
}